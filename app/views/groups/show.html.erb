<h3><%= @group.name %></h3>

<h4>Group members</h4>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @group.people.each do |person| %>
      <tr>
        <td><%= link_to person.name, person %></td>
        <td><%= person.email %></td>
        <td><%= person.phone %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Delete', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if admin? %>
  <%= link_to 'Edit Group Details', edit_group_path(@group), class: "btn btn-primary" %>
| <%= link_to 'Delete', group_path(@group), method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

<h4>Reservations</h4>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Calendar</th>
      <th>Dates</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @group.appointments.order(:starts).each do |appointment| %>
      <tr>
        <td><%= link_to appointment.person.name, person_path(appointment.person) %></td>
        <td><%= link_to appointment.calendar.title, calendar_path(appointment.calendar) %></td>
        <td>
          <%= appointment.starts.strftime("%B %d, %Y") %>
          <% if appointment.starts != appointment.ends %>
            &ndash; <%= appointment.ends.strftime("%B %d, %Y") %>
          <% end %>
        </td>
        <td><%= link_to 'Details', appointment %></td>
        <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
        <td><%= link_to 'Delete', appointment_path(appointment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
