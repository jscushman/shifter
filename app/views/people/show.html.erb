<p id="notice"><%= notice %></p>

<h3>Person</h3>

<p>
  <strong>Name:</strong>
  <%= @person.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @person.email %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @person.phone.phony_formatted(format: :international) %>
</p>

<p>
  <strong>Group:</strong>
  <%= link_to @person.group.name, @person.group %>
</p>

<%= link_to 'Edit', edit_person_path(@person) %> | <%= link_to 'Delete', person_path(@person), method: :delete, data: { confirm: 'Are you sure?' } %>

<h3>Appointments</h3>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Calendar</th>
      <th>Dates</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @person.appointments.order(:starts).each do |appointment| %>
      <tr>
        <td><%= link_to appointment.calendar.title, calendar_path(appointment.calendar) %></td>
        <td>
          <%= appointment.starts.strftime("%B %d, %Y") %>
          <% if appointment.starts != appointment.ends %>
            &ndash; <%= appointment.ends.strftime("%B %d, %Y") %>
          <% end %>
        </td>
        <td><%= link_to 'Details', appointment %></td>
        <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
