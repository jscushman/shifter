<%= form_for(@person, html: {class: 'form-horizontal'}) do |f| %>
  <% if @person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
      <% @person.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :name, class: 'col-sm-2 control-label', class: 'col-sm-2 control-label' %>
    <div class="col-sm-8"><%= f.text_field :name, class: 'form-control' %></div>
  </div>
  <div class="field form-group">
    <%= f.label :group_id, class: 'col-sm-2 control-label', class: 'col-sm-2 control-label' %>
    <div class="col-sm-8"><%= collection_select(:person, :group_id, Group.all, :id, :name, {}, {class: 'form-control'}) %></div>
  </div>
  <div class="field form-group">
    <%= f.label :email, class: 'col-sm-2 control-label', class: 'col-sm-2 control-label' %>
    <div class="col-sm-8"><%= f.email_field :email, class: 'form-control' %></div>
  </div>
  <div class="field form-group">
    <%= f.label "Phone", class: 'col-sm-2 control-label', class: 'col-sm-2 control-label' %>
    <div class="col-sm-8"><%= f.telephone_field :phone, class: 'form-control' %></div>
  </div>
  <div class="actions form-group">
    <div class="col-sm-offset-2 col-sm-8">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
