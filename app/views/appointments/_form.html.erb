    <%= f.label :starts %><br>
    <%= f.date_select :starts %>
  </div>
  <div class="field">
    <%= f.label :days %><br>
    <%= f.number_field :days %>
  </div>
  <div class="field">
    <%= f.label :note %><br>
    <%= f.text_area :note %>
  </div>
  <div class="field">
    <%= f.label :calendar_id %><br>
    <%= collection_select(:appointment, :calendar_id, Calendar.all, :id, :title) %>
  </div>
  <div class="field">
    <%= f.label :person_id %><br>
    <%= collection_select(:appointment, :person_id, Person.all, :id, :name) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
