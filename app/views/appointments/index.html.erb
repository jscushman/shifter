<p id="notice"><%= notice %></p>

<h1>Listing Appointments</h1>

<table>
  <thead>
    <tr>
      <th>Created</th>
      <th>Starts</th>
      <th>Days</th>
      <th>Note</th>
      <th>Calendar</th>
      <th>Person</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.created %></td>
        <td><%= appointment.starts %></td>
        <td><%= appointment.days %></td>
        <td><%= appointment.note %></td>
        <td><%= appointment.calendar %></td>
        <td><%= appointment.person %></td>
        <td><%= link_to 'Show', appointment %></td>
        <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
        <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

