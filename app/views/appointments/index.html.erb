<p id="notice"><%= notice %></p>

<h3>Listing Appointments</h3>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Created</th>
      <th>Starts</th>
      <th>Ends</th>
      <th>Note</th>
      <th>Calendar</th>
      <th>Person</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.created %></td>
        <td><%= appointment.starts %></td>
        <td><%= appointment.ends %></td>
        <td><%= appointment.note %></td>
        <td><%= link_to appointment.calendar.title, calendar_path(appointment.calendar) %></td>
        <td><%= link_to appointment.person.name, person_path(appointment.person) %></td>
        <td><%= link_to 'Show', appointment %></td>
        <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
        <td><%= link_to 'Delete', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

